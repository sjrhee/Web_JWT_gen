<?xml version="1.0" encoding="UTF-8"?>
<Configuration packages="org.apache.logging.log4j.core">
    <Properties>
        <Property name="log.path">/var/lib/tomcat9/logs</Property>
        <Property name="log.pattern">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
    </Properties>

    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${log.pattern}"/>
        </Console>

        <!-- File Appender for all logs -->
        <File name="File" fileName="${log.path}/webjwtgen.log">
            <PatternLayout pattern="${log.pattern}"/>
        </File>

        <!-- File Appender for debug logs only -->
        <File name="DebugFile" fileName="${log.path}/webjwtgen-debug.log">
            <PatternLayout pattern="${log.pattern}"/>
            <LevelRangeFilter minLevel="DEBUG" maxLevel="DEBUG"/>
        </File>

        <!-- File Appender for error logs only -->
        <File name="ErrorFile" fileName="${log.path}/webjwtgen-error.log">
            <PatternLayout pattern="${log.pattern}"/>
            <LevelRangeFilter minLevel="ERROR" maxLevel="FATAL"/>
        </File>
    </Appenders>

    <Loggers>
        <!-- JWT Security Package -->
        <Logger name="com.security.jwt" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
            <AppenderRef ref="DebugFile"/>
            <AppenderRef ref="ErrorFile"/>
        </Logger>

        <!-- PasswordService specific logger -->
        <Logger name="com.security.jwt.service.PasswordService" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
            <AppenderRef ref="DebugFile"/>
            <AppenderRef ref="ErrorFile"/>
        </Logger>

        <!-- SetupServlet specific logger -->
        <Logger name="com.security.jwt.SetupServlet" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
            <AppenderRef ref="DebugFile"/>
            <AppenderRef ref="ErrorFile"/>
        </Logger>

        <!-- Root logger -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
            <AppenderRef ref="ErrorFile"/>
        </Root>
    </Loggers>
</Configuration>
